<div class="col-xs-12 col-sm-4 col-md-4" style="text-align: center; margin-bottom: 20px; padding: 0px 5px">
  {{#if photo}}
    <img src={{photo}} alt={{name}} class="team-photo">
  {{/if}}
  
  <h4 class="bio">{{name.first}} {{name.last}}</h4>
 
  <h5 class="bio">{{title}}</h5>

  <div>
  {{#if linkedin}}
    <a href={{linkedin}}><i class="fa fa-linkedin fa-2x" aria-hidden="true"></i></a>
  {{/if}}

  {{#if website}}
    <a href={{website}}><i class="fa fa-home fa-2x" aria-hidden="true"></i></a>
  {{/if}}

  {{#if twitter}}
    <a href={{twitter}}><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a>
  {{/if}}

  {{#if instagram}}
    <a href={{instagram}}><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a>
  {{/if}}
  </div>

</div>
